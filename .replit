modules = ["cpp-clang14", "nodejs-20", "swift-5.8"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["flutter", "chromium", "dhall"]

[userenv]

[userenv.shared]
MPESA_ENV = "sandbox"
MPESA_SHORTCODE = "174379"
MPESA_CALLBACK_URL = "https://your-callback-url.com/mpesa/callback"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "CrypTex Trading"

[[workflows.workflow]]
name = "CrypTex Trading"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
build = ["flutter", "build", "web", "--release"]
publicDir = "build/web"
run = ["node", "server.js"]
